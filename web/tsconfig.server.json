{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["server.ts"],
  "exclude": ["node_modules"]
}
